
@model IEnumerable<practice_chart.Models.Location>
@{
    ViewBag.Title = "我的溫度";
    var jm = Json.Encode(ViewBag.m);
    var jl = Json.Encode(Model);
}

<div class="container">
    <div class="jumbotron alert-success" style="text-align:center">
        <h2>使用Charts.js繪製台灣月份溫度</h2>
    </div>
    <canvas id="linechart"></canvas>
</div>

@section endJS{
    <script>
        var jsl = @Html.Raw(jl);
        var glc = document.getElementById("linechart");
        var chart =new Chart(glc, {
            type: "line",
            data: {
                labels: @Html.Raw(jm),
                datasets: [{
                    label : jsl[0].City,
                    data: jsl[0].Temperature,
                    fill: false,
                    backgroundColor: 'rgba(255,165,0,0.3)',
                    borderColor: 'rgb(255,165,0)',
                    pointStyle: "circle",
                    pointBackgroundColor: 'rgb(0,255,0)',
                    pointRadius: 5,
                    pointHoverRadius: 1000
                }, {
                    label: jsl[1].City,
                    data: jsl[1].Temperature,
                    fill: false,
                    backgroundColor: 'rgba(0,255,255,0.3)',
                    borderColor: 'rgb(0,255,255)',
                    pointStyle: "triangle",
                    pointBackgroundColor: 'rgb(0,0,0)',
                    pointRadius: 5,
                    pointHoverRadius: 10
                }, {
                    label: jsl[2]["City"],
                    data: jsl[2]["Temperature"],
                    fill: false,
                    backgroundColor: 'rgba(153,50,204,0.3)',
                    borderColor: 'rgb(153,50,204)',
                    pointStyle: "rect",
                    pointBackgroundColor: 'rgb(220,20,60)',
                    pointRadius: 5,
                    pointHoverRadius: 10
                }]
            },
            options: {
                responsive: true,
                title: {
                    display: true,
                    fontSize: 26,
                    text: '2019~2020年氣溫月平均值'
                },
                tooltips: {
                    mode: 'point',
                    intersect: true,
                },
                hover: {
                    mode: 'nearest',
                    intersect: true
                },
                scales: {
                    xAxes: [{
                        display: true,
                        scaleLabel: {
                            display: true,
                            labelString: '月份',
                            fontSize: 20
                        },
                        ticks: {
                            fontSize: 15
                        }
                    }],
                    yAxes: [{
                        display: true,
                        scaleLabel: {
                            display: true,
                            labelString: '溫度(攝氏)',
                            fontSize : 20
                        },
                        ticks: {
                            fontSize: 15
                        }
                    }]
                },
                animation: {
                    duration : 3000
                }
            }
        });
    </script>
}