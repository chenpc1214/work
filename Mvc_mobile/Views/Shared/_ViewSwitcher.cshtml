@if (Request.Browser.IsMobileDevice && Request.HttpMethod == "GET")
{
<div class="view-switcher ui-bar-a">
    @if (ViewContext.HttpContext.GetOverriddenBrowser().IsMobileDevice)
    {
        @: Displaying mobile view
        @Html.ActionLink("切換至Bootstrap Desktop view", "SwitchView", "ViewSwitcher", new { mobile = false, returnUrl = Request.Url.PathAndQuery }, new { @class = "ui-btn", rel = "external" })
    }
    else
    {
        @: Displaying desktop view
        @Html.ActionLink("切換至jQuery Mobile view", "SwitchView", "ViewSwitcher", new { mobile = true, returnUrl = Request.Url.PathAndQuery }, new { rel = "external" })
    }
</div>
}